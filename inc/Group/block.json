{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "bigbite/flex-grid",
  "title": "Flex Grid",
  "description": "A container for Flexbox or CSS grid items",
  "category": "design",
  "icon": "grid-view",
  "keywords": ["Flex", "Flexbox", "Grid"],
  "attributes": {
    "display": {
      "type": "string",
      "default": "flex"
    },
    "flexDirection": {
      "type": "string",
      "default": "row"
    },
    "flexDirectionReverse": {
      "type": "boolean",
      "default": false
    },
    "alignItems": {
      "type": "string",
      "default": "stretch"
    }
  },
  "supports": {
    "alignWide": true,
    "align": true
  },
  "providesContext": {
    "bigbite/flex-grid/display": "display"
  }
}
